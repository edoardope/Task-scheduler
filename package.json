{
  "name": "task-scheduler",
  "version": "1.0.0",
  "description": "Personal task scheduler for productivity tracking",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "unset ELECTRON_RUN_AS_NODE && electron-vite dev",
    "build": "electron-vite build",
    "preview": "unset ELECTRON_RUN_AS_NODE && electron-vite preview",
    "dist": "npm run build && electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json",
    "typecheck": "npm run typecheck:node && npm run typecheck:web"
  },
  "build": {
    "appId": "com.taskscheduler.app",
    "productName": "Task Scheduler",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "node_modules/sql.js/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "node_modules/sql.js/dist/sql-wasm.wasm",
        "to": "sql-wasm.wasm"
      }
    ]
  },
  "dependencies": {
    "sql.js": "^1.11.0"
  },
  "devDependencies": {
    "electron": "^28.3.0",
    "electron-vite": "^2.3.0",
    "electron-builder": "^25.1.8",
    "@vitejs/plugin-react": "^4.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.0",
    "zustand": "^5.0.0",
    "date-fns": "^4.1.0",
    "recharts": "^2.15.0",
    "lucide-react": "^0.469.0",
    "tailwindcss": "^4.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "typescript": "^5.7.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/node": "^22.10.0"
  }
}
